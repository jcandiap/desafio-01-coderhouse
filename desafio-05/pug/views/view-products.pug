doctype html
html(lang="en")
    head
        title PUG | Ver Productos
        include includes/head.pug
    body(style="padding: 16px")
        div(class="container")
            a(href="/")
                button(class="btn btn-primary") Volver 
            table(class="table table-striped table-hover mt-5")
                thead 
                    tr 
                        th(scope="col", class="text-center") ID 
                        th(scope="col", class="text-center") Descripcion 
                        th(scope="col", class="text-center") Precio 
                        th(scope="col", class="text-center") Icono 
                tbody
                    if !!productos
                        each producto in productos
                            tr 
                                td(class="text-end")=producto["id"]
                                td(class="text-start ps-4")=producto["title"]
                                td(class="text-end ps-4")='$ '+producto["price"]
                                td(class="text-center")
                                    img(src=producto["thumbnail"], alt=producto["title"], style="width: 50px; height: 50px")
                if !!error
                    div(class="alert alert-danger w-50 mx-auto text-center")
                            h5 #{error}