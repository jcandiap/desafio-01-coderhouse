doctype html
html(lang="en")
    head
        title PUG | Insertar Producto
        include includes/head.pug
        script(src="./js/insert-product.js")
    body(style="padding: 16px")
        div(class="container")
            a(href="/")
                button(class="btn btn-primary") Volver 
            div(class="d-flex")
                h1(class="mx-auto") Ingresar producto
            div(class="w-100 mt-3")
                form(action="/productos", method="post", class="d-flex flex-column w-100") 
                    div(class="mb-3 w-50 mx-auto")
                        label(for="title", class="form-label") Titulo 
                        input(type="text", class="form-control", id="title", name="title")
                    div(class="mb-3 w-50 mx-auto")
                        label(for="precio", class="form-label") Precio 
                        input(type="number", class="form-control", id="price", name="price")
                    div(class="mb-3 w-50 mx-auto")
                        label(for="thumbnail", class="form-label") Icono 
                        input(type="text", class="form-control", id="thumbnail", name="thumbnail")
                    div(class="mb-3 w-50 mx-auto")
                        button(class="btn btn-primary") Ingresar
                    if !!error
                        div(class="alert alert-danger w-50 mx-auto text-center")
                            h5 #{error}
                    if !!producto
                        div(class="alert alert-success w-50 mx-auto text-center")
                            h5 Â¡Producto ingresado con exito! Nuevo ID: #{producto.id}
